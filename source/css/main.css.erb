/* Syntax highlighting */
<%= Rouge::Themes::Github.render(:scope => '.highlight') %>

body {
  font-size: 16px;
}

/* Override link color */
a {
  color: #7e4bad;
}

a:hover,
a:focus {
  color: #653691;
}

.nav-pills > li.active > a,
.nav-pills > li.active > a:hover,
.nav-pills > li.active > a:focus {
  background-color: #7e4bad;
}

/* Responsive image */
img {
  max-width: 100%;
  height: auto;
}

td img {
  max-width: 100%;
  max-height: 250px;
}

/* Logo */
.sidebar-logo {
  margin-left: -4px;
  padding: 25px 0 18px 0;
}

.big-logo {
  text-align: center;
  padding: 0 20px 30px 0;
}

/* Screenshot */
.screenshot {
  margin: 1em 0;
}

.screenshot-border img {
  border: 1px solid #ccc;
  padding: 10px;
}

/* Footer */
.site-footer {
  margin-top: 50px;
  padding-top: 20px;
  padding-bottom: 20px;
  font-size: 13px;
  color: #777;
  border-top: 1px solid #e5e5e5;
  text-align: center;
}

.site-footer-link-list {
  margin-left: 0;
}

/* Make the code sample background colours match */
.highlight {
  background-color: #f5f5f5;
}
